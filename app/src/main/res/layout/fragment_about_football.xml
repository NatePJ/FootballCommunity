<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e5e5e5">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/about_football_head_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/headimage6"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:background="@null"/>

            <TextView
                android:id="@+id/about_football_head_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风筝与疯子"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:typeface="sans"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about_football_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  地址   重庆"/>
            <TextView
                android:id="@+id/about_football_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  球场   奥体中心"/>
            <TextView
                android:id="@+id/about_football_detail3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  时间   Sat,May 27"/>
            <TextView
                android:id="@+id/about_football_detail4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  人数   6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/add_about_football"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/send_btn_selector"
                android:gravity="center"
                android:text="加入"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e5e5e5">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/about_football_head_image2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/headimage5"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:background="@null"/>

            <TextView
                android:id="@+id/about_football_head_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="启德胧村正"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:typeface="sans"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about_football_detail5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  地址   重庆"/>
            <TextView
                android:id="@+id/about_football_detail6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  球场   风雨操场"/>
            <TextView
                android:id="@+id/about_football_detail7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  时间   Sat,Jnl  27"/>
            <TextView
                android:id="@+id/about_football_detail8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  人数   10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/add_about_football2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/send_btn_selector"
                android:gravity="center"
                android:text="加入"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
