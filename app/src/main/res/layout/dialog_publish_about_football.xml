<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e5e5e5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_create_groundtext"
            android:layout_width="100dp"
            android:paddingLeft="30dp"
            android:layout_height="wrap_content"
            android:text="球场"
            android:textSize="25dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_create_groundspinner"
            android:entries="@array/football_field"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="30dp"
            android:id="@+id/dialog_create_timetext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/dialog_create_timeedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_create_peopletext"
            android:layout_width="100dp"
            android:paddingLeft="30dp"
            android:layout_height="wrap_content"
            android:text="人数"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/dialog_create_peopleedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/dialog_create_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/send_btn_selector"
        android:gravity="center"
        android:text="创建"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</LinearLayout>
